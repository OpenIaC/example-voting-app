pipeline {
  agent any

  tools{
    nodejs "NodeJS 8.9.4"
  }

  stages{
    stage('build'){
      when{
        changeset "**/result/**"
      }
      steps{
        echo "Compiling Result App"
        dir('result'){
          sh 'npm install'
        }
      }
    }
    stage('test'){
      when{
        changeset "**/result/**"
      }
      steps{
        echo "Running Unit Tests on Result App"
        dir('result'){
          sh 'npm install'
          sh 'npm test'
        }
      }
    }
  }
}
